generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(uuid())
  name     String
  image    String
  products Product[]
}

model Product {
  id         String   @id @default(uuid())
  title      String
  price      Int
  oldPrice   Int
  image      String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}
